extends layout

block content
  .flex.justify-between.items-center
    // Title
    h1.flex.items-center.font-sans.font-bold.break-normal.text-indigo-500.px-2.py-8.text-xl(class='md:text-2xl') Pacienti (#{Object.keys(pacienti).length})
    a.bg-transparent.border.border-gray-500.text-gray-500.font-bold.py-2.px-4.rounded-full(class='hover:border-indigo-500 hover:text-indigo-500' href='/pacienti/add') 
      i.fas.fa-plus.pr-2 
      | Adauga Pacient
  // Card
  #recipients.p-6.mt-6.rounded.shadow.bg-white(class='lg:mt-0')
    .dataTables_wrapper
      table#example.stripe.hover.dataTable(style='width:100%; padding-top: 1em;  padding-bottom: 1em;')
        thead
          tr
            th(data-priority='1') Nume
            th(data-priority='2') Email
            th(data-priority='3') Telefon
            th(data-priority='4') Asigurare
            th(data-priority='5') Zona
        tbody
          each pacient in pacienti
            tr
              td 
                a(href=`/pacienti/${pacient.id_pacient}` class="font-bold")=pacient.nume
              td= pacient.email
              td= pacient.telefon
              td= pacient.asigurare
              td= pacient.zona

